<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlanaganOranTriviaGame.CashBuilder"
             Title="CashBuilder"
             BackgroundImageSource="background.png">
    <VerticalStackLayout Padding="20" Spacing="20">

        <Label x:Name="QuestionLabel" FontSize="20" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
        <VerticalStackLayout Spacing="10">
            <Button x:Name="AnswerButton1" Text="" ZIndex="1" Clicked="OnAnswerClicked" BackgroundColor="Red"/>
            <Button x:Name="AnswerButton2" Text="" ZIndex="1" Clicked="OnAnswerClicked" BackgroundColor="Red"/>
            <Button x:Name="AnswerButton3" Text="" ZIndex="1" Clicked="OnAnswerClicked" BackgroundColor="Red"/>
        </VerticalStackLayout>

        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <Button Text="Next" Clicked="OnNextClicked" BackgroundColor="Red"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>